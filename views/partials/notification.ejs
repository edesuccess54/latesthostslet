<style>
    .toast {
    position: fixed;
    top: 20px;
    right: 20px;
    border-radius: 5px;
    display: flex;
    max-width: 400px;
    justify-content: space-between;
    align-items: center;
    padding: 15px 0;
    padding-right: 10px;
