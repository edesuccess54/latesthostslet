    <script>
        const closeBtnIcon = document.querySelector('.close_icon');
        const overLay = document.querySelector('.payment_overlay');
        const paymentModal = document.querySelector('.payment_modal');
        const paymentBtn = document.querySelector('.payment_form');
        const mobilePayementForm = document.querySelector('.mobile_payment_form');
        const mobileCheckMessage = document.querySelector('.mobile_message');
        const checkinLargeMessage = document.querySelector('.checkin_large_message')
        const copy = document.querySelector('.copy');
        const mobileReservationSection = document.querySelector('.mobile_reservation_section');
        const mobilePaymentFormOverlay = document.querySelector('.mobile_payment_form_overlay');
        const mobileReservationBtn = document.querySelector('.mobile_reservation_btn');
        const perNight = document.querySelector('.per_night')
        const total = document.querySelector('.total');
        const showAllPhotoBtn = document.querySelector('.show_all_btn');

        const showAllPhotoModal = document.querySelector('.show_all_photo_modal');
        const showAllPhotoWrapper = document.querySelector('.show_wrapper');

        // const payment mthods btns 
        const payNowButtons = document.querySelectorAll('.pay_now')
        const bitcoinBtn = document.querySelector('.btc_btn')

        bitcoinBtn.addEventListener('click', (e) => {
            document.querySelector('.address_wrapper').classList.toggle('active')
        })

        // function to remove window from scrolling 
        function  stopScroll() {
            window.scrollTo(0, 0);
        }

        function closePaymentModal(e){
            paymentModal.classList.remove('active');
            overLay.classList.remove('active')

            window.removeEventListener('scroll', stopScroll)
        } 

        const openMobilePaymentModal = (event, mobile_checkin, mobile_checkout, mobile_amount) => {
            event.preventDefault();

            const bookedPeriod = calculateDays(mobile_checkin, mobile_checkout);
            perNight.innerHTML = `$${mobile_amount} x ${bookedPeriod} nights`;
            const totalAmount = (mobile_amount * bookedPeriod).toLocaleString()
            total.innerHTML = `Total Amount $${totalAmount}`

            paymentModal.classList.add('active');
            overLay.classList.add('active')

            window.addEventListener('scroll', stopScroll)
        }

        function openPaymentModal(e) {
            e.preventDefault();
            
            const checkin = paymentBtn.checkin.value
            const checkout = paymentBtn.checkout.value
            const guest = paymentBtn.guest.value;
            const amount = paymentBtn.amount.value

            checkinLargeMessage.className ='checkin_large_message'
            checkinLargeMessage.textContent = ''
            if(!checkin || !checkout) {
                checkinLargeMessage.classList.add('error');
                checkinLargeMessage.textContent = 'Please select checkin and checkout date.'
                return
            }

            const bookedDays = calculateDays(checkin, checkout);
            perNight.innerHTML = `$${amount} x ${bookedDays} nights`;
            const totalAmount = (amount * bookedDays).toLocaleString()
            total.innerHTML = `Total Amount $${totalAmount}`

            paymentModal.classList.add('active');
            overLay.classList.add('active')

            window.addEventListener('scroll', stopScroll)
        }
        paymentBtn.addEventListener('submit', openPaymentModal);
        closeBtnIcon.addEventListener('click', closePaymentModal);
        overLay.addEventListener('click', closePaymentModal);

        // messages functions 
        function paymentMessage(e){
            e.preventDefault();

            if(e.target.classList.contains('google_btn')) {
                const google_Message = document.querySelector('.google_message')
                google_Message.textContent = 'Google pay is not available at this time';

                setTimeout(() => {
                    google_Message.textContent = '';
                },3000)

            } else if(e.target.classList.contains('apple_btn')) {
                 const apple_Message = document.querySelector('.apple_message');
                 apple_Message.textContent = 'Apple pay is not available at this time';
                

                setTimeout(() => {
                    apple_Message.textContent = '';
                },3000)

            } else if(e.target.classList.contains('card_btn')) {
                const card_Message = document.querySelector('.card_message')
                card_Message.textContent = 'Card Payment is not available at this time';

                setTimeout(() => {
                    card_Message.textContent = '';
                },3000)
                
            }
            
        }

        payNowButtons.forEach(payNowButton => {
            payNowButton.addEventListener('click', paymentMessage)
        })

        const copyWalletAddress = (e) => {
            const wallet = document.querySelector('.address');

            wallet.select()
            document.execCommand('copy')

            copy.textContent = 'copied';

            setTimeout(() => {
                copy.textContent = 'copy';
            }, 3000)
        }
        copy.addEventListener('click', copyWalletAddress);


        function calculateDays(startDate, endDate) {
            // Convert the dates to timestamps
            const startTimestamp = new Date(startDate).getTime();
            const endTimestamp = new Date(endDate).getTime();

            // Calculate the difference in milliseconds
            const millisecondsPerDay = 24 * 60 * 60 * 1000; // Number of milliseconds in a day
            const timeDifference = Math.abs(endTimestamp - startTimestamp);

            // Calculate the number of days
            const numberOfDays = Math.round(timeDifference / millisecondsPerDay);

            return numberOfDays;
        };

        // function to open mobile reservation form 
        function openMobileReservationForm(e) {
            mobilePaymentFormOverlay.classList.add('show');
            mobileReservationSection.classList.add('show');

            window.addEventListener('scroll', stopScroll)
        }

        // function to close mobile reservation form 
        function closeMobileReservationForm(e) {
            mobilePaymentFormOverlay.classList.remove('show');
            mobileReservationSection.classList.remove('show');

            window.removeEventListener('scroll', stopScroll)
        }
        mobileReservationBtn.addEventListener('click', openMobileReservationForm);
        mobilePaymentFormOverlay.addEventListener('click', closeMobileReservationForm);

        mobilePayementForm.addEventListener('submit', (event) => {
            event.preventDefault()
            mobileCheckMessage.className ='mobile_message'
            mobileCheckMessage.textContent = ''
            const mobile_checkin = mobilePayementForm.checkin2.value
            const mobile_checkout = mobilePayementForm.checkout2.value
            const mobile_amount = mobilePayementForm.amount2.value

            if(!mobile_checkin || !mobile_checkout) {
                mobileCheckMessage.classList.add('error');
                mobileCheckMessage.textContent = 'Please select checkin and checkout date.'
                return
            }

            closeMobileReservationForm()
            openMobilePaymentModal(event, mobile_checkin, mobile_checkout, mobile_amount)
        })


        // show all photo function begins here 
        const showAllPhoto = (e) => {
            showAllPhotoModal.classList.add('show');
            showAllPhotoWrapper.classList.add('show');

            window.addEventListener('scroll', stopScroll)
        }

        const hideAllPhoto = (e) => {
            showAllPhotoModal.classList.remove('show');
            showAllPhotoWrapper.classList.remove('show');

            window.removeEventListener('scroll', stopScroll)
        }


        // show all photo function ends here 
        showAllPhotoBtn.addEventListener('click', showAllPhoto);
        showAllPhotoModal.addEventListener('click', hideAllPhoto)
    </script>

    <script>
        // activate slick on mobile devices 
        $(document).ready(function() {
            function initSlick() {
                $('.potos_container').slick({
                speed: 300,
                autoplay: true,
                dots:true,
                arrows: true,
                infinite: true,
                });
            }

            function destroySlick() {
                if ($('.potos_container').hasClass('slick-initialized')) {
                    $('.potos_container').slick('unslick');
                }
            }

            // Initialize or destroy Slick based on screen width
            function handleSlick() {
                if ($(window).width() < 768) {
                initSlick();
                } else {
                destroySlick();
                }
            }

            $(window).on('load resize', handleSlick);
        });
            
    </script>

