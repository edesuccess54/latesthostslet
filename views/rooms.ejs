                    google_Message.textContent = '';
                },3000)

            } else if(e.target.classList.contains('apple_btn')) {
                 const apple_Message = document.querySelector('.apple_message');
                 apple_Message.textContent = 'Apple pay is not available at this time';
                

                setTimeout(() => {
                    apple_Message.textContent = '';
                },3000)

            } else if(e.target.classList.contains('card_btn')) {
                const card_Message = document.querySelector('.card_message')
                card_Message.textContent = 'Card Payment is not available at this time';

                setTimeout(() => {
                    card_Message.textContent = '';
                },3000)
                
            }
            
        }

        payNowButtons.forEach(payNowButton => {
            payNowButton.addEventListener('click', paymentMessage)
        })

        const copyWalletAddress = (e) => {
            const wallet = document.querySelector('.address');

            wallet.select()
            document.execCommand('copy')

            copy.textContent = 'copied';

            setTimeout(() => {
                copy.textContent = 'copy';
            }, 3000)
        }
        copy.addEventListener('click', copyWalletAddress)


    </script>
