

<style>

    .modal_wrapper {
        position: fixed;
        display: none;
        align-items: center; 
        background: rgba(0, 0, 0, 0.5);
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 99999;
    }
    .modal_wrapper.show {
        display: flex;
    }

    .modal_container {
        max-width: 320px;
        border-radius: 5px;
        margin: auto;
        background: #fff;
        overflow-y: scroll;
        max-height: 800px;
    }

    .modal_container::-webkit-scrollbar {
        display: none;
    }

    .modal_content {
        padding: 20px;
    }

    .image_proof {
        position: relative;
        width: 100%;
        background: green;
    }

    .image_proof img {
        max-width: 100%;
        object-fit: contain;
    }

    .close_proof_modal {
        position: absolute;
        right: 20px;
        top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px;
        width: 30px;
        height: 30px;
        text-align: center;
        border-radius: 50%;
        background: gray;
    }

    .pay_modal_btn {
        color: #fff;
        cursor: pointer;
        font-size: 20px;
    }

    @media screen and (min-width: 768px) {
        .modal_container {
            width: 600px;
        }
    }
</style>


    <div class="modal_wrapper">
        <div class="modal_container">
            <div class="modal_content">
                <div class="image_proof">
                    
                </div>
            </div>
        </div>
    </div>


    <!-- display all property section  -->
    <section class="table_section" style="margin-top: 40px;">
        <table id="example" class="display" style="width:100%">
            <style>
                th, td {
                    white-space: nowrap;
                }
            </style>
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Unit purchased</th>
                    <th>Method</th>
                    <th>Proof</th>
                    <th>Time</th>
                    <th>status</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody class="view_proof">
                <% if(deposits.length > 0) { %>
                    <% for(let i = 0; i < deposits.length ; i++) { %>
                        <tr>
                            <td>$<%= Number(deposits[i].amount).toLocaleString() %> </td>
                            <td><%= deposits[i].unitAmount%></td>
                            <td><%= deposits[i].method %> </td>
                            <td>
                                <button class="action_btn" style="background: green;" data-image="<%= deposits[i].proof %>">view proof</button>
                            </td>
                            <td><%= deposits[i].datetime %></td>
                            <td>
                                <% if(deposits[i].status) { %>
                                    <p class="completed">Approved</p>
                                <%} else { %>
                                    <p class="pending"><%= deposits[i].statusMessage === 'Rejected'? 'Rejected' : 'Pending' %></p>
                                <% } %>
                                
                            </td>
                            <td class="action_tab">
                                <button class="action_btn" style="background: green;"  data-paymentid="<%= deposits[i]._id %>">Approve</button>
                                <button class="action_btn reject" data-paymentid="<%= deposits[i]._id %>">Reject</button>
                            </td>
                        </tr>
                <%  }
                } %> 

            </tbody>
        </table>

    </section>
  


<script>
    const viewProof = document.querySelector('.view_proof');
    const modalWrapper = document.querySelector('.modal_wrapper');
    const actionTab = document.querySelector('.action_tab');

    const viewPaymentproof = (e) => {
        if(e.target.textContent == 'view proof') {
            const imageProof = document.querySelector('.image_proof');
            modalWrapper.classList.add('show');

            let html = `
                <img class="proof" src="data:image/png;base64,${e.target.dataset.image}" alt="payment proof">
                <span class="close_proof_modal">
                    <i class="fa-solid fa-xmark pay_modal_btn"></i>
                </span>
            `;

            imageProof.innerHTML = html;
            window.addEventListener('scroll', stopScroll)
        }
    }

    const closeViewPayment = (e) => {
        modalWrapper.classList.remove('show');
         window.removeEventListener('scroll', stopScroll)
    }
    
    
    viewProof.addEventListener('click', (e) => {
        viewPaymentproof(e)

        const payModalBtn = document.querySelector('.pay_modal_btn')
        payModalBtn.addEventListener('click', closeViewPayment)
    });
    

    // function to approve user payment 
    const approvePayment = async (e) => {
        try {
            const paymentId = e.target.dataset.paymentid;
            
            if(e.target.classList.contains('approve')) {
                e.target.textContent = 'Approving...'
                const response = await fetch(`/auth/admin/approve-payment/${paymentId}`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify()
                })

                if(!response.ok) {
                    throw new Error('something went wrong, please try again')
                }
                const json = await response.json();

                if(json.error) {
                    throw new Error(json.Error)
                }

                if(json.success) {
                    e.target.textContent = 'Approve'
                    location.reload()
                }

            } else if(e.target.classList.contains('reject')) {
                e.target.textContent = 'Rejecting...'
                const response = await fetch(`/auth/admin/reject-payment/${paymentId}`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify()
                })

                if(!response.ok) {
                    throw new Error('something went wrong, please try again')
                }
                const json = await response.json();

                if(json.error) {
                    throw new Error(json.Error)
                }

                if(json.success) {
                    location.reload()
                }
            }
            
        } catch (error) {
            if(e.target.classList.contains('approve')) {
                e.target.textContent = 'Approve'
            } else {
                e.target.textContent = 'Reject'
            }
            throw new Error(error.message, 400)
        }
    }

    actionTab.addEventListener('click', approvePayment)

    
    

</script>
    
