<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | Hostslet </title>
    
    <!-- font awesome cdn  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- dataTables css  -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">

    <link rel="stylesheet" href="/admin/css/style.css">

    <!-- slick  -->
    <link rel="stylesheet" type="text/css" href="/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="/slick/slick-theme.css"/>

</head>
<body>

    <style>
        header {
            height: 60px;
            width: 100%;
            background: #fff;
            box-shadow: 1px 2px 8px #fff;
            padding: 0 20px;
        }

        nav {
            display: flex;
            height: 100%;
            align-items: center;
            justify-content: space-between;
        }

        .left-wrapper {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .left-wrapper h3 {
            color: gray;
        }

        .mobile_menu {
            display: flex;
            gap: 20px;
            margin-left: auto;
        }

        .avatar {
            display: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            overflow: hidden;
            background: gray;
        }
        .avatar img {
            width: 100%;
            height: 100%;
        }

        .hamburger i {
            color: #ff385c;
            cursor: pointer;
            font-size: 20px;
        }

        @media screen and (min-width: 768px) {
            .hamburger {
                display: none;
            }

            .avatar {
                display: block;
            }
        }
    </style>
    <header>
        <nav>
            <div class="brand">
                <h3 style="color: #ff385c; font-weight: bold;">Hostslet</h3>
                <!-- <img src="" alt=""> -->
            </div>

            <div class="left-wrapper">
                <h3 style="color: #ff385c;">Welcome, Admin</h3>
                <div class="mobile_menu">
                    <div class="avatar">
                        <img src="/admin/images/avatar.png" alt="profile avatar">
                    </div>
                    <div class="hamburger">
                        <span class="fa-bar"><i class="fa-solid fa-bars"></i></span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <%- include("../../partials/notification") %> 

