<script>
    const hamburger = document.querySelector('.fa-bar');
    const mobileMenu = document.querySelector('.mobile_nav_wrapper');
    const overlay = document.querySelector('.overlay');
    const closeIcon = document.querySelector('.fa-x');

    const stopScroll = (e) => {
        window.scrollTo(0, 0);
    }

    const openMobielMenu =  (e) => {
        overlay.classList.add('show');
        mobileMenu.classList.add('show');

        window.addEventListener('scroll', stopScroll);
    }

    const closeMobielMenu = (e) => {
        overlay.classList.remove('show');
        mobileMenu.classList.remove('show');

        window.removeEventListener('scroll', stopScroll);
    }


    hamburger.addEventListener('click', openMobielMenu);
    overlay.addEventListener('click', closeMobielMenu);
    closeIcon.addEventListener('click', closeMobielMenu);
</script>